<%= form_for @user, :url=> {} do |f| %>
	<%= f.text_field :email %> <br>
	<%= f.text_field :username %> <br>
	<%= submit_tag("Save User") %> <br>

<% end %>


<h1>
	<% if @msg && @msg.class != String %> 
		<% @msg.each do |m| %> 
			<h2>
				<%= m %> 
			</h2>
		<% end %> 
	<% else %> 
		<h1>
			<%= @msg %> 
		</h1>
	<% end %> 
</h1>

<% if @users && @users.size > 0  %>
<% @users.each do |u| %>
<p>
    <%= u.email %> with username :- <%= u.username %> <a href='/users/delete?id=<%= u.id %>'> Delete </a>  <a href='/users/edit?id=<%= u.id %>'> Edit </a> 
</p>
<% end %>
<% end %>